<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divider_title_itens_listview">

            <ImageView
                android:id="@+id/situacao_convenio_favoritos_imageview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/em_andamento"/>

            <TextView
                android:id="@+id/objeto_convenio_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_toRightOf="@id/situacao_convenio_favoritos_imageview"
                android:textColor="@android:color/white"
                android:text="COMPRA DE AMBULÃ‚NCIAS" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/icone_date_imageview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_today_black_36dp" />

            <TextView
                android:id="@+id/vigencia_convenio_textview"
                android:layout_toRightOf="@id/icone_date_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="JAN/2016 a ABR/2016" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/icone_valor_convenio_imageview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_valor_convenio_lista" />

            <TextView
                android:id="@+id/valor_convenio_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icone_valor_convenio_imageview"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="$ 500 mil" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/buttons_color">

            <ImageView
                android:id="@+id/icone_municipio_uf_imageview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_room_black_24dp" />

            <TextView
                android:id="@+id/municipio_uf_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icone_municipio_uf_imageview"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Municipio, UF" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>