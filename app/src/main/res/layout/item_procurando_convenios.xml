<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Colocar a cor do ImageView e do TextView em android:color/darker_gray -->
    <ImageView
        android:id="@+id/localizacao_carregando_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_room_black_48dp" />

    <TextView
        android:id="@+id/carrregando_convenios_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/localizacao_carregando_imageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="@string/carregando_convenios"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>