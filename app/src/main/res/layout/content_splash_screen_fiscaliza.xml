<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.paulo.fiscalizabr.SplashScreenFiscaliza"
    tools:showIn="@layout/activity_splash_screen_fiscaliza">

    <ImageView
        android:id="@+id/logo_fiscaliza_br"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_fiscalizabr_transparent" />

    <TextView
        android:layout_below="@id/logo_fiscaliza_br"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/mensagem_splash_screen"/>

</RelativeLayout>
